    <mailingLists>
        <mailingList>
            <name>None</name>
        </mailingList>
    </mailingLists>
    <scm>
        <connection>scm:git:git//github.com/plug-in-baby/simple-colocalization</connection>
        <developerConnection>scm:git:git//github.com/plug-in-baby/simple-colocalization</developerConnection>
