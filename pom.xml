    <url>https://sonj.me</url>
    <inceptionYear>2019</inceptionYear>
    <licenses>
        <license>
            <name>MIT</name>
        </license>
    </licenses>
    <organization>
        <name>Imperial College Software Engineering Group Project Group 11</name>
    </organization>
    <developers>
        <developer>
            <id>wburr10</id>
            <name>William Burr</name>
        </developer>
        <developer>
            <id>tiger-cross</id>
            <name>Tiger Cross</name>
